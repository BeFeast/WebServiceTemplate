# Project Configuration
PROJECT_NAME={{PROJECT_NAME}}

# Ports
BACKEND_PORT={{BACKEND_PORT}}
FRONTEND_PORT={{FRONTEND_PORT}}

# Database (ok-shared-infra PostgreSQL)
DATABASE_URL=postgresql+asyncpg://{{PROJECT_NAME}}:{{DB_PASS}}@10.10.0.13:5432/{{PROJECT_NAME}}

# Cache (ok-shared-infra Redis)
REDIS_URL=redis://10.10.0.13:6379/{{REDIS_DB_NUM}}

# Security
SECRET_KEY={{SECRET_KEY}}

# API URL (for frontend to call backend)
# Uses separate subdomain to avoid path rewriting issues
NEXT_PUBLIC_API_URL=https://{{PROJECT_NAME}}-api.oklabs.uk

# Google OAuth (optional)
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GOOGLE_REDIRECT_URI=https://{{PROJECT_NAME}}-api.oklabs.uk/api/v1/auth/callback

# Subdomains (auto-configured by setup-npm-hosts.sh)
# Frontend: https://{{PROJECT_NAME}}.oklabs.uk
# Backend:  https://{{PROJECT_NAME}}-api.oklabs.uk
